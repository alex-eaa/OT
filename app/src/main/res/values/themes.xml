<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OT1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryLight">@color/primaryLightColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.OT1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OT1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OT1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AnswersButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">3dp</item>
        <item name="elevation">3dp</item>
        <item name="android:gravity">start</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size_answer</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">?android:textColorSecondary</item>
        <item name="android:backgroundTint">?attr/colorPrimaryLight</item>
    </style>

    <style name="MyFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

</resources>