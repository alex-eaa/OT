<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OT1" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryLight">@color/primaryLightColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.OT1.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.OT1.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.OT1.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AnswersCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
        <item name="android:foregroundGravity">center</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="cardElevation">3dp</item>
        <item name="android:backgroundTint">?attr/colorPrimaryLight</item>

    </style>

    <style name="MyFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:backgroundTint">?attr/colorPrimary</item>
    </style>

</resources>